{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "jsx": "preserve",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noEmitOnError": false,
    "resolveJsonModule": true,
    "importHelpers": true,
    "strict": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "@types/jest"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "downlevelIteration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "vendor"
  ],
}