{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "mocha": true
  },
  "plugins": [
    "@typescript-eslint/parser"
  ],
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "indent": [
      "error",
      4
    ],
    "linebreak-style": 0,
    "global-require": 0,
    "import/no-extraneous-dependencies": 0,
    "arrow-body-style": [
      "error",
      "always"
    ],
    "no-extend-natives": 0,
    "lines-between-class-members": 0,
    "no-console": 0
  }
}